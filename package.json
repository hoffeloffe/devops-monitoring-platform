{
  "name": "devops-automation-hub",
  "version": "1.0.0",
  "description": "DevOps Automation Hub - Simple & Clean Architecture",
  "main": "src/app.py",
  "scripts": {
    "start": "python src/app.py",
    "dev": "python src/app.py",
    "docker:up": "docker-compose -f docker-compose.simple.yml up -d",
    "docker:down": "docker-compose -f docker-compose.simple.yml down",
    "docker:logs": "docker-compose -f docker-compose.simple.yml logs -f",
    "test": "python -m pytest tests/",
    "lint": "flake8 src/",
    "format": "black src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/devops-automation-hub"
  },
  "keywords": [
    "devops",
    "automation",
    "kubernetes",
    "monitoring",
    "infrastructure",
    "python",
    "flask"
  ],
  "author": "Chris - DevOps Engineer",
  "license": "MIT"
}
